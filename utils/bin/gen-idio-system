# 
# gen-idio-system -- create a system-specific header file
#

set -ue

note ()
{
    :
}

usage () 
{
    cat << EOF >&2

${0##*/} generates a system-specific header file idio-system.h

  -v		verbose
EOF
}

opt_verbose=

while getopts "hv" opt ; do
    case "${opt}" in
    h)
	usage
	exit 0
	;;
    v)
	opt_verbose=1
	;;
    *)
	usage
	exit 1
	;;
    esac
done

######################################################################

# file-hierarchy(7) describes $libdir which can be
# /usr/lib{64}/{gnu-tuple} -- or not

uname_a=( $(uname -mrps) )

libdir=/usr/lib
case "${uname_a[2]}" in
x86_64)
    if [[ -d /usr/lib64 ]] ; then
	libdir=/usr/lib64
    fi
    ;;
esac

if type -p systemd-path ; then
    libdir=$(systemd-path system-library-arch)
else
    MULTIARCH=

    case "${uname_a[0]}" in
    Linux)
	# careful, -print-multiarch is only in 4.9 onwards
	if [[ ${GCC} ]] && ! MULTIARCH=$(${GCC} -print-multiarch) 2>/dev/null ; then
	    :
	fi
	;;
    *BSD)
	libdir=/usr/local/lib
    esac

    case "${MULTIARCH}" in
    "") ;;
    *)
	libdir=${libdir}/${MULTIARCH}
	;;
    esac
fi

######################################################################

cat <<EOF > idio-system.h
/*
 * generated by ${0##*/} on $(date)
 */

/*
 * idio-system.h
 *
 */

#ifndef IDIO_SYSTEM_H
#define IDIO_SYSTEM_H

#define IDIO_SYSTEM_LIBDIR	"${libdir}"

#endif

EOF
