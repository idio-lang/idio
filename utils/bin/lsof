# lsof -- a wrapper to a poor man's lsof cobbled from pfiles/fstat

_uname=( $(uname -mrps) )
OS=${_uname[0]}

case "${OS}" in
SunOS|OpenBSD)
    exec $0.${OS} ${1+"$@"}
    ;;
*)
    echo "$0: SunOS|OpenBSD only" >&2
    exit 1
    ;;
esac
