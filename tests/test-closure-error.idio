;;
;; test-closure-error.idio
;;

closure-error0 := Tests

closure-error-load := {
  n := 0

  function/name closure-error-load (filename msg) {
    if (not (string? filename)) (error/type ^rt-parameter-type-error 'load "string" filename)

    n = n + 1

    exp-tests := 1

    ;eprintf "loading #%s %s looking for %s\n" n filename msg
    trap (^rt-parameter-type-error
	  ^rt-hash-key-not-found-error) (function (c) {
	    ;eprintf "closure-error #%s: %s %s\n" n msg (idio-error-location c)
	    test (idio-error-message c) msg

	    if (not (string=? (idio-error-message c) msg)) {
	      condition-report (append-string "closure-error-load: " filename) c (current-error-handle)
	    }
	    
	    trap-return 'closure-error
	  }) {
	    t0 := Tests
	    (symbol-value 'load 'Idio) filename
	    if (not (equal? Tests (t0 + exp-tests))) {
	      eprintf "closure-error #%s: %s did not generate \"%s\"\n" n filename msg
	      Errors = Errors + 1
	      Tests = t0 + exp-tests
	    }
    }
  }
}

closure-error-load "closure-errors/not-function.idio" "bad parameter type: '#f' a constant is not a function"
closure-error-load "closure-errors/not-found.idio" "key not found"

;; all done?
Tests? (closure-error0 + 2)
