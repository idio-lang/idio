;; Unicode interpolation characters
define-template (unicode-safe in) {
  ;; the unquote character is U+0127 meaning we should return the
  ;; value passed in
  #Tƒß{
    ƒßin
  }
}

test (unicode-safe "foo") "foo"
test (unicode-safe "ƒß") "ƒß"

