;;
;; test-keyword-error.idio
;;

keyword-error0 := Tests

#*

We have a bunch of test cases which should provoke a ^rt-keyword-error
or ^rt-parameter-type-error.  So we can write a load function which
will wrapper the actual load with a trap for
(^rt-keyword-error ^rt-parameter-type-error) and compare the message
strings.

*#

keyword-error-load := {
  n := 0

  function (filename msg) {
    if (not (string? filename)) (error 'load "not a string" filename)

    n = n + 1

    exp-tests := 1

    ;eprintf "loading #%s %s looking for %s\n" n filename msg
    trap (^rt-keyword-error
	  ^rt-parameter-type-error) (function (c) {
				       ;eprintf "keyword-error #%s: %s %s\n" n msg c.location
				       test c.message msg

				       if (not (string=? c.message msg)) {
					 condition-report (append-string "keyword-error-load: " filename) c (current-error-handle)
				       }
				       
				       trap-return 'keyword-error
	  }) {
	    t0 := Tests
	    (symbol-value 'load 'Idio) filename
	    if (not (equal? Tests (t0 + exp-tests))) {
	      eprintf "keyword-error #%s: %s did not generate \"%s\"\n" n filename msg
	      Errors = Errors + 1
	      Tests = t0 + exp-tests
	    }
	  }
  }
}

keyword-error-load "keyword-errors/make-keyword-bad-format.idio" "keyword contains an ASCII NUL"
keyword-error-load "keyword-errors/make-keyword-bad-type.idio" "bad parameter type: '#t' a CONSTANT_IDIO is not a string|symbol"

keyword-error-load "keyword-errors/keyword2string-bad-type.idio" "bad parameter type: '#t' a CONSTANT_IDIO is not a keyword"

keyword-error-load "keyword-errors/keyword-ref-bad-type.idio" "bad parameter type: '#t' a CONSTANT_IDIO is not a hash"
keyword-error-load "keyword-errors/keyword-ref-bad-keyword-type.idio" "bad parameter type: '#t' a CONSTANT_IDIO is not a keyword"
keyword-error-load "keyword-errors/keyword-ref-not-found.idio" "keyword not found"

keyword-error-load "keyword-errors/keyword-set-bad-type.idio" "bad parameter type: '#t' a CONSTANT_IDIO is not a hash"
keyword-error-load "keyword-errors/keyword-set-bad-keyword-type.idio" "bad parameter type: '#t' a CONSTANT_IDIO is not a keyword"

;; all done?
Tests? (keyword-error0 + 8)
