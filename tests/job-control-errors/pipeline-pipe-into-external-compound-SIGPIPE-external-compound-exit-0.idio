
if (e? testfile) {
  rm testfile
}

oph := pipe-into {
  (cond-expand
   ((or "uname/sysname/SunOS"
	"uname/sysname/OpenBSD") {
     libc/sleep 1
   })
   (else {
     job-control-pipeline-delay 5000
   }))
  cat "/dev/fd/0"
} | {
  'sleep 0
}

hprintf pid-ph "%d,%d\n" PID (%idio-job-pgid %%last-job)
close-handle pid-ph

str := sprintf "hello from %d" PID

hprintf oph "%s\n" str
close-handle oph

(wait)

if (e? testfile) {
  ifh := open-input-file testfile
  msg := read-line ifh
  close-handle ifh

  if (not (string=? str msg)) {
    libc/exit 3
  }
} {
  libc/exit 4
}
