;;
;; counter.idio
;;

cter := function (n c) {
  if (n gt 0) {
    ; display* c
    cter (n - 1) (c + 1)
  } c
}

;; each loop is ~ 50 instructions

;; Aug 2015
;; normal compilation => ~ 6000 i/ms
;; lean compilation   => ~ 10-15k i/ms
;; Oct 2017
;; normal compilation => ~ 145k i/ms
;; lean compilation   => ~ 250k i/ms
cter 40000 0

